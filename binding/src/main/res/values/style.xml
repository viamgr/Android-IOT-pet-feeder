<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_retry">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/tv_retry</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="tv_retry_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/tv_retry</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="tv_loading">
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/tv_loading</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loading">
        <item name="android:layout_gravity">center</item>
        <item name="lottie_colorFilter">@color/black</item>
    </style>

    <style name="loading_white">
        <item name="android:layout_gravity">center</item>
        <item name="lottie_colorFilter">@color/white</item>
    </style>

    <style name="btn_retry">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="btn_retry_white">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="btn_retry_end">
        <item name="tint">@color/black</item>
    </style>

    <style name="close">
        <item name="tint">@color/black</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="close_white">
        <item name="tint">@color/white</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="backgroundLayer">
        <item name="android:background">@drawable/custom_ripple</item>
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>

</resources>