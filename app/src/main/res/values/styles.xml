<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="textAppearanceListItem">@style/TextAppearanceListItem</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/mainColor</item>
        <item name="android:background">@color/transBack</item>
        <item name="itemTextColor">@color/mainColor</item>


    </style>

    <style name="TextAppearanceListItem" parent="TextAppearance.AppCompat.Subhead">
        <!--        <item name="android:textColor">@color/white</item>-->
    </style>

    <style name="BorderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorPrimary">@color/mainColor</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">

    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/mainColor</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.FixedSize">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">#80000000</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>